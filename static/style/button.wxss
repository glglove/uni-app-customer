.button {
  background: #FA9960;
  border: 1rpx solid #DDDDDD;
  color: #FFFFFF ;
  box-sizing: border-box;
  text-align: center;
}
.button.inline {
  display: inline-block;
}
.button::after {
  border: none;
}
.button.button-hover {
  background: #FFFFFF;
  opacity: 0.7;
}
.button.primary {
  background: #EB637A;
  border-width: 0;
  color: #fff;
}
.button.primary.button-hover {
  opacity: 0.7;
  background: #EB637A;
}
.button.highlight {
  border-radius: 4rpx;
  background: #FA9960;
  display: inline-block;
  color: #594A23;
  border: 0;
}
.button.highlight.disable {
  color: #594A23;
}
.button.disable {
  color: #333333;
  background: #F1F1F1 !important;
}
