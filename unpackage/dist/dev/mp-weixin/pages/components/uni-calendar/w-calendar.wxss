.w-calendar {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  -webkit-transition: all 0.3s ease;
  -o-transition: all 0.3s ease;
  transition: all 0.3s ease;
  z-index: 99999;
}
.w-calendar .w-calendar-header {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    height: 88rpx;
    position: relative;
}
.w-calendar .w-calendar-header .prev, .w-calendar .w-calendar-header .next {
      font-size: 30rpx;
      position: relative;
      width: 40rpx;
      height: 40rpx;
}
.w-calendar .w-calendar-header .prev {
      padding-left: 20px;
}
.w-calendar .w-calendar-header .prev:before {
        content: "";
        border: 1px solid transparent;
        border-left: solid 1px #000;
        border-top: solid 1px #000;
        width: 20rpx;
        display: block;
        height: 20rpx;
        position: absolute;
        left: 0;
        top: 50%;
        -webkit-transform: rotate(-45deg) translate(0, -50%);
            -ms-transform: rotate(-45deg) translate(0, -50%);
                transform: rotate(-45deg) translate(0, -50%);
}
.w-calendar .w-calendar-header .next {
      padding-right: 20px;
}
.w-calendar .w-calendar-header .next:after {
        content: "";
        border: 1px solid transparent;
        border-right: solid 1px #000;
        border-top: solid 1px #000;
        width: 20rpx;
        display: block;
        height: 20rpx;
        position: absolute;
        right: 0;
        top: 50%;
        -webkit-transform: rotate(45deg) translate(0, -50%);
            -ms-transform: rotate(45deg) translate(0, -50%);
                transform: rotate(45deg) translate(0, -50%);
}
.w-calendar .w-calendar-header .current {
      padding: 0 10rpx;
      font-size: 32rpx;
}
.w-calendar .w-calendar-header .back {
      position: absolute;
      right: 0;
      top: 50%;
      margin-top: -30rpx;
      background-color: #f00;
      padding: 0 10rpx;
      height: 60rpx;
      line-height: 60rpx;
      color: #fff;
      font-size: 28rpx;
      text-align: center;
      border-radius: 30rpx 0 0 30rpx;
}
.w-calendar swiper {
    height: 802rpx;
    overflow: hidden;
}
.w-calendar .w-calendar-item .w-calendar-week {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    border-bottom: solid 2rpx #eee;
}
.w-calendar .w-calendar-item .w-calendar-week .w-week-item {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
          -ms-flex: 1;
              flex: 1;
      text-align: center;
      line-height: 88rpx;
      height: 88rpx;
      font-size: 30rpx;
}
.w-calendar .w-calendar-item .w-calendar-day {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-wrap: wrap;
        -ms-flex-wrap: wrap;
            flex-wrap: wrap;
    overflow: hidden;
    /* height: 612rpx; */
}
.w-calendar .w-calendar-item .w-calendar-day .w-day-item {
      width: calc(100% / 7);
      height: 100rpx;
      border-bottom: solid 2rpx #eee;
}
.w-calendar .w-calendar-item .w-calendar-day .w-day-item .box {
        display: block;
        width: 80rpx;
        height: 80rpx;
        margin: 10rpx auto;
        border-radius: 50%;
        text-align: center;
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -webkit-flex-direction: column;
            -ms-flex-direction: column;
                flex-direction: column;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
            -ms-flex-pack: center;
                justify-content: center;
}
.w-calendar .w-calendar-item .w-calendar-day .w-day-item text {
        font-size: 26rpx;
}
.w-calendar .w-calendar-item .w-calendar-day .w-day-item.disabled .box {
      color: #aaa;
}
.w-calendar .w-calendar-item .w-calendar-day .w-day-item.disabled-before .box, .w-calendar .w-calendar-item .w-calendar-day .w-day-item.disabled-after .box {
      color: #eee;
}
.w-calendar .w-calendar-item .w-calendar-day .w-day-item.active .box {
      background-color: #f00;
      color: #fff;
}

